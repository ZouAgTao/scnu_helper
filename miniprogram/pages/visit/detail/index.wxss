.outer
{
  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.navigator
{
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.btn_nav_back
{
  width: 158rpx;
  height: 64rpx;
  margin-left: 26rpx;
  margin-top: 14rpx;

  background-color: #555454;
  border-radius: 6rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn_nav_back_text
{
  color: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
}

.block_main
{
  width: 100%;
}

::-webkit-scrollbar
{
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.card_content
{
  margin-top: 26rpx;
  margin-left: 36rpx;
  margin-bottom: 10rpx;
  width: 678rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 4rpx 0rpx rgba(170, 170, 170, 1);

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.area_images
{
  width: 676rpx;
  height: 404rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;

  background-color: gray;
}

.logo
{
  width: 100%;
  height: 100%;
}

.area_title
{
  margin-top: 46rpx;
  width: 602rpx;
  height: 66rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.scroll_text
{
  width: 572rpx;
  height:540rpx;
  margin-top: 34rpx;
}

.area_text
{
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.title
{
  color: rgba(0, 0, 0, 1);
  font-size: 40rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
}

.btn_gosite
{
  width: 180rpx;
  height: 66rpx;
  border-radius: 36rpx;
  background-color: rgba(24, 144, 255, 1);

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.btn_icon
{
  margin-left: 18rpx;
  width: 48rpx;
  height: 48rpx;
}

.btn_text
{
  margin-left: 10rpx;
  width: 84rpx;
  height: 40rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  font-family: PingFangSC-bold;
  font-weight: bold;
}

.logo_image
{
  width: 100%;
  height: 100%;
}